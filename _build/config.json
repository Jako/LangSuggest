{
  "name": "LangSuggest",
  "lowCaseName": "langsuggest",
  "description": "Language Suggest for MODX",
  "author": "Thomas Jakobi",
  "version": "1.1.0-rc1",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "LangSuggest",
          "file": "langsuggest.plugin.php",
          "events": [
            "OnWebPagePrerender"
          ]
        }
      ],
      "chunks": [
        {
          "name": "tplLangSuggestBar",
          "file": "bar.chunk.html"
        },
        {
          "name": "tplLangSuggestBarOption",
          "file": "baroption.chunk.html"
        },
        {
          "name": "tplLangSuggestModal",
          "file": "modal.chunk.html"
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "tpl",
        "area": "site",
        "value": "tplLangSuggestModal"
      },
      {
        "key": "cookie_name",
        "area": "site",
        "value": "LangSuggest"
      },
      {
        "key": "cookie_expiration",
        "area": "site",
        "value": "365"
      },
      {
        "key": "no_session",
        "type": "combo-boolean",
        "area": "site",
        "value": "0"
      },
      {
        "key": "display_count",
        "area": "site",
        "value": "3"
      },
      {
        "key": "chunk_position",
        "area": "site",
        "value": "bottom"
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.3"
    },
    {
      "name": "modx",
      "version": ">=2.7"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.treehillstudio.php"
      ]
    }
  }
}
